<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <attr name="menuItem"/>
    <attr name="themeName"/>
    <style name="Theme.Carpooling" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="themeName">white</item>
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_500</item>
        <item name="colorSecondaryVariant">@color/amber_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="backgroundColor">#eeeeee</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/MyToolbarStyle</item>
        <item name="colorControlNormal">@color/gray_dark</item>
        <item name="menuItem">@color/black</item>
    </style>

    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="toolbarNavigationButtonStyle">@style/MyToolbarTheme</item>
    </style>

    <style name="MyToolbarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="android:actionMenuTextColor">@color/toolbar_icon_color</item>
    </style>

    <style name="Theme.Carpooling.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Carpooling.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Carpooling.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.CarpoolingDayNight.Background" parent="ThemeOverlay.AppCompat.DayNight">
    <item name="android:background">@color/cardview_light_background</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray_200</item>
        <item name="colorControlActivated">@color/amber_500</item>
    </style>


</resources>