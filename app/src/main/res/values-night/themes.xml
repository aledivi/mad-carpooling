<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Carpooling" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_900</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_200</item>
        <item name="colorSecondaryVariant">@color/amber_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color.
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        

    </style>

    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="MyToolbarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="android:actionMenuTextColor">@color/toolbar_icon_color</item>
        <item name="background">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="elevationOverlayEnabled">true</item>
