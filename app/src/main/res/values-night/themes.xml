<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Carpooling" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="themeName">dark</item>
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/blue_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_200</item>
        <item name="colorSecondaryVariant">@color/amber_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="backgroundColor">#151515</item>
        <!-- Status bar color.
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/MyToolbarStyle</item>
        <item name="colorControlNormal">@color/gray_500</item>
        <item name="menuItem">@color/white</item>
    </style>

    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="toolbarNavigationButtonStyle">@style/MyToolbarTheme</item>
    </style>

    <style name="MyToolbarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
    </style>
    <style name="Theme.CarpoolingDayNight.Background" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:background">@color/cardview_dark_background</item>
    </style>
</resources>  
